# Target Configuration
# Address of the trader you want to copy
TARGET_USER_ADDRESS=0x0000000000000000000000000000000000000000

# Your wallet address (the bot will trade from this address)
MY_USER_ADDRESS=0x0000000000000000000000000000000000000000

# Wallet Configuration
# Private key of your trading wallet (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Polymarket API Endpoints
CLOB_HTTP_URL=https://clob.polymarket.com/
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws
GAMMA_API_URL=https://gamma-api.polymarket.com

# Bot Configuration
# Polling interval in milliseconds (default: 4000 = 4 seconds)
POLLING_INTERVAL=4000

# Maximum position limit in USD (default: 0.2 = $0.20)
MAX_POSITION_LIMIT=0.2

# Minimum trade size in shares (default: 1)
MIN_TRADE_SIZE=1

# Auto-redeem resolved positions (true/false)
AUTO_REDEEM=false

# Redeem interval in milliseconds (default: 7200000 = 2 hours)
REDEEM_INTERVAL=7200000

# Polygon RPC Configuration (optional, for direct blockchain access)
# RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Logging Configuration
LOG_LEVEL=info
