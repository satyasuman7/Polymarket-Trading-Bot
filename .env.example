# Buy when any token (Up/Down) reaches this price on the current 15m Bitcoin market
BOT_TARGET_PRICE=0.95
BOT_MIN_PRICE=0.90   # optional: only buy when ask >= this (avoid buying at 0.01)
BOT_BUY_SIZE=5
BOT_DRY_RUN=true
BOT_PRICE_LOG_INTERVAL_MS=1000   # log Up/Down prices every N ms (0=every WS update)
POLYMARKET_PRIVATE_KEY=   # wallet private key (hex, with or without 0x)
POLYMARKET_PROXY=         # Polymarket proxy/funder (or use PROXY_WALLET_ADDRESS)
POLYMARKET_CREDENTIAL_PATH=  # optional: path to API key JSON (key, secret, passphrase)
